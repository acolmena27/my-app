node{
   stage('SCM Checkout'){
     git 'https://github.com/acolmena27/my-app'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['tomcat-dev']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war root@1192.168.250.14:/opt/tomcat8/webapps/'
      }
   }
}
